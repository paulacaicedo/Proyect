            <TextBox x:Name="textbox_mark" HorizontalAlignment="Left" Height="27" Margin="283,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" FontFamily="Arial" FontSize="15"/>
            <TextBox x:Name="textbox_product" HorizontalAlignment="Left" Height="27" Margin="526,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" FontFamily="Times New Roman" FontSize="15"/>
            <Label Content="Descripcion" HorizontalAlignment="Left" Margin="27,187,0,0" VerticalAlignment="Top" Width="93" FontFamily="Times New Roman" FontSize="15"/>
            <TextBox x:Name="textbox_descrip" HorizontalAlignment="Left" Height="168" Margin="27,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291" RenderTransformOrigin="0.541,0.193"/>
            <Label Content="Cantidad" HorizontalAlignment="Left" Margin="331,187,0,0" VerticalAlignment="Top" Width="74" FontFamily="Times New Roman" FontSize="15" Height="27"/>
            <TextBox x:Name="textbox_quantity" HorizontalAlignment="Left" Height="27" Margin="410,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" FontFamily="Arial" FontSize="15"/>
