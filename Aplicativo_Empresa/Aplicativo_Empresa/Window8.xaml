            <TextBox x:Name="textbox_phone" HorizontalAlignment="Left" Height="23" Margin="634,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontFamily="Arial"/>
            <Label Content="# Producto" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,142,271,0" Width="89" FontFamily="Times New Roman" FontSize="15" RenderTransformOrigin="0.538,-0.092"/>
            <Label Content="Marca" HorizontalAlignment="Left" Margin="223,140,0,0" VerticalAlignment="Top" Width="54" FontFamily="Times New Roman" FontSize="15"/>
            <Button x:Name="button_atras" Content="Atras" HorizontalAlignment="Left" Margin="678,10,0,0" VerticalAlignment="Top" Width="75" Height="23" FontFamily="Times New Roman" FontSize="15" Click="Button_Click"/>
            <Label Content="Linea" HorizontalAlignment="Left" Margin="27,140,0,0" VerticalAlignment="Top" Width="52" FontSize="15" FontFamily="Times New Roman"/>
            <ComboBox x:Name="combobox_linea" HorizontalAlignment="Left" Margin="84,142,0,0" VerticalAlignment="Top" Width="134" Height="27">
                <Label Content="HARDWARE" FontFamily="Times New Roman" FontSize="15"/>
                <Label Content="SOFTWARE" FontFamily="Times New Roman" FontSize="15"/>
                <Label Content="CONSUMIBLE" FontFamily="Times New Roman" FontSize="15"/>
