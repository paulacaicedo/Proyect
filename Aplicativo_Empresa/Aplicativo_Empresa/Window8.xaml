            <Label Content="IVA" HorizontalAlignment="Left" Margin="614,234,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="15"/>
            <Label Content="Precio Total" HorizontalAlignment="Left" Margin="331,280,0,0" VerticalAlignment="Top" Width="93" FontFamily="Times New Roman" FontSize="15"/>
            <Label Content="Estado de Compra" HorizontalAlignment="Left" Margin="331,324,0,0" VerticalAlignment="Top" Width="126" FontFamily="Times New Roman" FontSize="15"/>
            <ComboBox x:Name="comboBox_state" HorizontalAlignment="Left" Margin="457,324,0,0" VerticalAlignment="Top" Width="141" Height="27">
                <Label Content="Por comprar" FontFamily="Times New Roman" FontSize="15"/>
                <Label Content="Comprado" FontFamily="Times New Roman" FontSize="15"/>
            </ComboBox>
            <Button x:Name="button_guardar" Content="Guardar" HorizontalAlignment="Left" Margin="629,280,0,0" VerticalAlignment="Top" Width="124" Height="35" FontFamily="Times New Roman" FontSize="20" Click="Button_guardar_Click"/>
            <Label x:Name="label_date" Content="" HorizontalAlignment="Left" Margin="193,40,0,0" VerticalAlignment="Top" Width="84" FontFamily="Times New Roman" FontSize="15" Background="#FFF0EAEA"/>
            <TextBox x:Name="textbox_unitvalue" HorizontalAlignment="Left" Height="23" Margin="629,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Valor Unitario" HorizontalAlignment="Left" Margin="514,183,0,0" VerticalAlignment="Top" Width="98" FontFamily="Times New Roman" FontSize="15"/>
            <Label x:Name="labeltext_total" Content="" HorizontalAlignment="Left" Margin="457,280,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.163,-0.056" Width="141" Background="White"/>
            <Label x:Name="labeltext_beforeIva" Content="" HorizontalAlignment="Left" Margin="474,234,0,0" VerticalAlignment="Top" Width="124" Background="#FFF5EEEE"/>
            <Label x:Name="label_iva" Content="" HorizontalAlignment="Left" Margin="649,234,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.068,0.433" Width="75" Background="#FFF9EEEE" FontFamily="Arial"/>
