                </LinearGradientBrush>
            </Grid.Background>
            <Image Margin="10,10,672,298" Source="SM.png" Stretch="Fill"/>
            <Label Content="FACTURA DE COMPRA" HorizontalAlignment="Left" Margin="301,10,0,0" VerticalAlignment="Top" Height="35" Width="242" FontSize="21" FontFamily="Times New Roman"/>
            <Label Content="Fecha" HorizontalAlignment="Left" Margin="143,41,0,0" VerticalAlignment="Top" Width="53" Height="26" FontSize="15" FontFamily="Times New Roman"/>
            <Label Content="Cliente" HorizontalAlignment="Left" Margin="143,72,0,0" VerticalAlignment="Top" Width="53" FontFamily="Times New Roman" FontSize="15" Height="35"/>
            <TextBox x:Name="textbox_client" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="342" Margin="201,76,0,0" FontFamily="Arial"/>
            <Label Content="Vendedor" HorizontalAlignment="Left" Margin="452,44,0,0" VerticalAlignment="Top" Width="72" FontFamily="Times New Roman" FontSize="15"/>
            <Label Content="Contacto Cliente" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="6.202,7.348" Margin="134,107,0,0" Width="121" FontFamily="Times New Roman" FontSize="15" Height="30"/>
