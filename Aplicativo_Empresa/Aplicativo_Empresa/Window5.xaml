        <Label Content="Direccion
               " HorizontalAlignment="Left" Margin="548,160,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="15" RenderTransformOrigin="0.28,0.577"/>
        <TextBox x:Name="textbox_adress" HorizontalAlignment="Left" Height="23" Margin="618,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" RenderTransformOrigin="0.489,1.144" FontFamily="Times New Roman" FontSize="15"/>
        <Label Content="Tema Visita" HorizontalAlignment="Left" Margin="27,194,0,0" VerticalAlignment="Top" Width="89" FontFamily="Times New Roman" FontSize="15"/>
        <TextBox x:Name="textbox_topic" HorizontalAlignment="Left" Height="23" Margin="121,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" FontFamily="Arial"/>
        <Label Content="Informe" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,227,672,0" Width="89" FontFamily="Times New Roman" FontSize="15" RenderTransformOrigin="0.538,-0.092"/>
        <TextBox x:Name="textbox_report" HorizontalAlignment="Left" Height="141" Margin="27,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="333" FontFamily="Arial"/>
        <Label Content="Acuerdos y Compromisos" HorizontalAlignment="Left" Margin="383,192,0,0" VerticalAlignment="Top" Width="172" FontFamily="Times New Roman" FontSize="15"/>
        <TextBox x:Name="textbox_compromise" HorizontalAlignment="Left" Height="140" Margin="383,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370" FontFamily="Arial"/>
        <Button x:Name="button_atras" Content="Atrás" HorizontalAlignment="Left" Margin="678,10,0,0" VerticalAlignment="Top" Width="75" Height="23" FontFamily="Times New Roman" FontSize="15" Click="Button_Click"/>
        <Button x:Name="button_guardar" Content="Guardar" Margin="618,366,0,26" Width="109" FontFamily="Times New Roman" FontSize="20" Click="Button_guardar_Click"/>
        <Label x:Name="label_date" Content="" HorizontalAlignment="Left" Margin="208,70,0,0" VerticalAlignment="Top" Width="84" FontFamily="Times New Roman" FontSize="15" Background="#FFF0EAEA"/>
        <Label x:Name="label_time" Content="" HorizontalAlignment="Left" Margin="343,70,0,0" VerticalAlignment="Top" Width="101" FontFamily="Times New Roman" FontSize="15" Background="#FFF5EEEE"/>
