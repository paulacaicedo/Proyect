            <ComboBoxItem Content="Yolima Serrano" FontSize="15" FontFamily="Times New Roman"/>
            <ComboBoxItem Content="Sergio Monsalve" FontSize="15" FontFamily="Times New Roman"/>
            <ComboBoxItem Content="Erika Calderon" FontSize="15" FontFamily="Times New Roman"/>
            <ComboBoxItem Content="Viviana Sierra" FontSize="15" FontFamily="Times New Roman"/>
            <ComboBoxItem Content="Luisa Monsalve" FontSize="15" FontFamily="Times New Roman"/>
        </ComboBox>
        <Label Content="Telefono" HorizontalAlignment="Left" Margin="575,121,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="15"/>
        <TextBox x:Name="Textbox_phone" HorizontalAlignment="Left" Height="23" Margin="644,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" FontFamily="Arial"/>

    </Grid>
</Window>
