            <Label Content="Hora" HorizontalAlignment="Left" Margin="297,75,0,0" VerticalAlignment="Top" Width="63" RenderTransformOrigin="0.524,0.24" FontFamily="Times New Roman" FontSize="15"/>
            <Label Content="Direccion" HorizontalAlignment="Left" Margin="548,156,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="15" RenderTransformOrigin="-0.202,0.705"/>
            <TextBox x:Name="textbox_adress" HorizontalAlignment="Left" Height="23" Margin="622,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" RenderTransformOrigin="0.489,1.144" FontFamily="Times New Roman" FontSize="15"/>
            <Label Content="Tema Visita" HorizontalAlignment="Left" Margin="27,194,0,0" VerticalAlignment="Top" Width="89" FontFamily="Times New Roman" FontSize="15"/>
            <TextBox x:Name="textbox_topic" HorizontalAlignment="Left" Height="23" Margin="121,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontFamily="Arial"/>
            <Label Content="Informe Final" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,227,661,0" Width="100" FontFamily="Times New Roman" FontSize="15" RenderTransformOrigin="0.538,-0.092"/>
            <TextBox x:Name="textbox_finalreport" HorizontalAlignment="Left" Height="141" Margin="27,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="333" FontFamily="Arial"/>
            <Label Content="Acuerdos y Compromisos Finales" HorizontalAlignment="Left" Margin="384,194,0,0" VerticalAlignment="Top" Width="225" FontFamily="Times New Roman" FontSize="15"/>
            <TextBox x:Name="textbox_finalecompromise" HorizontalAlignment="Left" Height="140" Margin="384,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370" FontFamily="Arial"/>
            <Button x:Name="button_atras" Content="Atrás" HorizontalAlignment="Left" Margin="678,10,0,0" VerticalAlignment="Top" Width="75" Height="23" FontFamily="Times New Roman" FontSize="15" Click="Button_Click"/>
            <Label x:Name="label_date" Content="" HorizontalAlignment="Left" Margin="208,70,0,0" VerticalAlignment="Top" Width="84" FontFamily="Times New Roman" FontSize="15" Background="#FFF0EAEA"/>
            <Label x:Name="label_time" Content="" HorizontalAlignment="Left" Margin="343,70,0,0" VerticalAlignment="Top" Width="101" FontFamily="Times New Roman" FontSize="15" Background="#FFF5EEEE"/>
            <ComboBox x:Name="comboBox_seller" HorizontalAlignment="Left" Margin="557,75,0,0" VerticalAlignment="Top" Width="196" Height="27" FontFamily="Times New Roman" FontSize="15">

                <ComboBoxItem Content="Yolima Serrano" FontSize="15" FontFamily="Times New Roman"/>
                <ComboBoxItem Content="Sergio Monsalve" FontSize="15" FontFamily="Times New Roman"/>
                <ComboBoxItem Content="Erika Calderon" FontSize="15" FontFamily="Times New Roman"/>
                <ComboBoxItem Content="Viviana Sierra" FontSize="15" FontFamily="Times New Roman"/>
                <ComboBoxItem Content="Luisa Monsalve" FontSize="15" FontFamily="Times New Roman"/>
            </ComboBox>
            <Button x:Name="button_guardar" Content="Guardar" HorizontalAlignment="Left" Margin="629,374,0,18" Width="109" FontFamily="Times New Roman" FontSize="20" Click="Button_guardar_Click"/>
            <Label Content="Telefono" HorizontalAlignment="Left" Margin="560,118,0,0" VerticalAlignment="Top" Width="69" FontFamily="Times New Roman" FontSize="15"/>
            <TextBox x:Name="Textbox_phone" HorizontalAlignment="Left" Height="23" Margin="629,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Arial"/>

        </Grid>

    </Grid>
</Window>
